#entrar
  background url(../../assets/img/bg-blur.jpg)
  background-size cover
  background-position center

  h1
    width 100%
    max-width 600px
    margin-bottom 30px
    transform scale(0)
    animation logo-start 0.6s
    animation-delay 0.5s
    animation-fill-mode forwards

  button
    background white
    padding 10px 30px
    font-weight 900
    color #3B5BA7
    border solid 2px #3B5BA7
    border-radius 15px
    box-shadow 0px 0px 0px 3px white
    text-transform uppercase
    cursor pointer
    font-size 20px
    display inline-table
    min-width 200px
    text-align center
    transition 0.5s transform
    margin 0 auto
    display table
    opacity 0
    margin-top -10px
    animation slide-btn 0.6s
    animation-delay 1.1s
    animation-fill-mode forwards

    &:hover
      background-image: linear-gradient(to bottom, #deb416 0%, #ffcb05 20%, #deb416 100%);
      box-shadow: 0px 0px 0px 3px #deb416;
      color: #44380a;
      border-color: #44380a;
      transform scale(1.05)


@keyframes slide-btn
  0%
    opacity 0
    margin-top -10px

  100%
    opacity 1
    margin-top 0px



@keyframes logo-start
  0%
    transform scale(100)

  90%
    transform scale(0.95)

  98%
    transform scale(1.05)

  100%
    transform scale(1)
